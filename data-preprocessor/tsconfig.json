{
  "compilerOptions": {
    "target": "es2017",  // Or a more recent ECMAScript version
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true, // Enable source maps for debugging
    "resolveJsonModule": true //to import json modules
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
